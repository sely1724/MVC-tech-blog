<section class="container">
  {{#if loggedIn}}
  <h3 class="title">Title: {{blog.title}}</h3>
  <h4 class = "notes">Thoughts: {{blog.notes}}</h4>

  <section class="flex-row justify-center delete-post">
    <button type="submit" class="delete-btn" value = "{{blog.id}}">Delete</button>

<form class="form update-form">
      <div class="form-group">
        <label for="update-title">Update Title:</label>
        <input class="form-input" type="text" id="title-update" />
      </div>
      <div class="form-group">
        <label for="update-notes">Update Notes:</label>
        <input class="form-input" type="text" id="notes-update" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary update-btn" type="submit" value = "{{blog.id}}">Enter</button>
      </div>
    </form>



    {{#each blog.Comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login" >You must login to view an individual post</a> 
{{/if}}

<script src="/js/dashboardEdit.js"></script>